<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "--//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.scoula.mapper.UserMapper">
    <!-- 모든 사용자 조회 -->
    <select id="getAllUsers" resultType="org.scoula.domain.UserVO">
        select * from users
    </select>

    <!-- 사용자 등록 -->
    <insert id="insertUser">
        insert into users (username)
        values(#{username})
    </insert>

    <!-- id로 사용자 조회 -->
    <select id="getUserById" resultType="org.scoula.domain.UserVO">
        select * from users where id = #{id}
    </select>

    <!-- id로 사용자 삭제 -->
    <delete id="deleteUserById">
        delete from users where id = #{id}
    </delete>

    <!-- 사용자 정보 수정 -->
    <update id="updateUser">
        update users
        set username = #{username}
        where id = #{id}
    </update>

    <!-- 해당 사용자의 리뷰 목록 조회 -->
    <select id="getReviewsByUserId" resultType="org.scoula.dto.ReviewDTO">
        select
            r.id as id,
            r.content as content,
            r.rating as rating,
            r.created_at as createAt,
            m.title as musicTitle
        from reviews r
        join music m on r.music_id = m.id
        where r.user_id = #{userId}
    </select>



</mapper>